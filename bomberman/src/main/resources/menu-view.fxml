<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="rootVBox" alignment="CENTER" prefHeight="480.0" prefWidth="672.0" spacing="30.0"
      xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17"
      fx:controller="src.bomberman.MenuController">
    <!-- KHÔNG CÓ style -fx-background-image Ở ĐÂY NỮA -->
    <!-- Bạn có thể đặt một màu nền mặc định ở đây nếu muốn, ví dụ: style="-fx-background-color: #2B2B2B;" -->
    <!-- Hoặc để trống nếu muốn dựa hoàn toàn vào code Java -->

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="BOMBERMAN" textFill="#FFD700">
        <font>
            <Font name="Impact" size="72.0"/>
        </font>
        <VBox.margin>
            <Insets bottom="30.0"/>
        </VBox.margin>
        <style>
            -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.75), 5, 0.5, 2, 2);
        </style>
    </Label>

    <Button fx:id="startGameButton" onAction="#handleStartGame" prefHeight="60.0" prefWidth="300.0"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold; -fx-background-radius: 10;"
            text="START GAME">
        <font>
            <Font name="Arial Bold" size="28.0"/>
        </font>
    </Button>

    <Button fx:id="exitButton" onAction="#handleExitGame" prefHeight="50.0" prefWidth="250.0"
            style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold; -fx-background-radius: 10;"
            text="EXIT">
        <font>
            <Font name="Arial Bold" size="22.0"/>
        </font>
    </Button>
</VBox>